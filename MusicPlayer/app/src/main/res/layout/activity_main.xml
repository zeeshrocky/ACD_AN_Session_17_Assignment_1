<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zeeshan.musicplayer.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Songs"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/songDummyText"
        android:padding="5dp"/>

    <android.support.v7.widget.ListViewCompat
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/songListView"
        android:layout_below="@+id/songDummyText"
        android:layout_above="@+id/mainToolbar">
    </android.support.v7.widget.ListViewCompat>

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/toolBarTitle"
            android:gravity="left"
            android:textColor="#FFF"/>
        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_pause_white_36dp"
            android:id="@+id/toolbarPlayPause"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
